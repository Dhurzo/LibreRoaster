# LibreRoaster Coffee Roaster Configuration Template
# Copy this file to config.json and modify as needed

{
  "wifi": {
    "ssid": "YOUR_WIFI_SSID",
    "password": "YOUR_WIFI_PASSWORD",
    "max_retries": 5,
    "retry_delay_ms": 5000
  },
  "server": {
    "port": 80,
    "max_connections": 10,
    "enable_cors": true
  },
  "roaster": {
    "name": "LibreRoaster",
    "model": "ESP32-ARTISAN",
    "bean_sensor_pin": 4,
    "env_sensor_pin": 5,
    "heating_pin": 12,
    "cooling_pin": 13,
    "agitator_pin": 14,
    "safety_limit_c": 250,
    "max_heating_percent": 100,
    "temperature_sample_rate_ms": 100
  },
  "artisan": {
    "enabled": true,
    "baud_rate": 115200,
    "data_format": "artisan",
    "profile_storage": true
  },
  "device": {
    "led_gpio": 2,
    "log_level": "info",
    "safety_checks": true
  }
}