{
  "version": 1,
  "author": "LibreRoaster Team",
  "editor": "wokwi",
  "parts": [
    {
      "type": "wokwi-dev-chip-esp32c3",
      "id": "esp32c3",
      "top": 100,
      "left": 100,
      "attrs": {
        "label": "ESP32-C3"
      }
    },
    {
      "type": "wokwi-led",
      "id": "status-led",
      "top": 150,
      "left": 50,
      "attrs": {
        "color": "blue",
        "label": "Status"
      }
    },
    {
      "type": "wokwi-pushbutton",
      "id": "boot-button",
      "top": 200,
      "left": 50,
      "attrs": {
        "label": "Boot"
      }
    },
    {
      "type": "wokwi-relay",
      "id": "ssr",
      "top": 300,
      "left": 150,
      "attrs": {
        "label": "SSR",
        "initialState": "off"
      }
    },
    {
      "type": "wokwi-heater",
      "id": "heating-element",
      "top": 350,
      "left": 200,
      "attrs": {
        "label": "Heater",
        "power": 100
      }
    },
    {
      "type": "wokwi-thermometer",
      "id": "bt-sensor",
      "top": 250,
      "left": 300,
      "attrs": {
        "label": "BT",
        "temperature": 25
      }
    },
    {
      "type": "wokwi-thermometer",
      "id": "et-sensor",
      "top": 300,
      "left": 300,
      "attrs": {
        "label": "ET",
        "temperature": 25
      }
    },
    {
      "type": "wokwi-logic-analyzer",
      "id": "logic-analyzer",
      "top": 100,
      "left": 400,
      "attrs": {
        "label": "SPI Signals"
      }
    }
  ],
  "connections": [
    ["esp32c3:TX", "logic-analyzer:D0", "green"],
    ["esp32c3:RX", "logic-analyzer:D1", "green"],
    ["esp32c3:GPIO2", "ssr:IN", "red", ["vcc"]],
    ["esp32c3:GPIO2", "heating-element:IN", "orange", ["vcc"]],
    ["esp32c3:GPIO3", "et-sensor:OUT", "blue"],
    ["esp32c3:GPIO4", "bt-sensor:OUT", "blue"],
    ["esp32c3:GPIO8", "status-led:IN", "blue", ["vcc"]],
    ["esp32c3:GPIO0", "boot-button:OUT.l", "black", ["gnd"]],
    ["esp32c3:3V3", "status-led:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "status-led:GND", "black", ["gnd", "power"]],
    ["esp32c3:3V3", "boot-button:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "boot-button:GND", "black", ["gnd", "power"]],
    ["esp32c3:3V3", "ssr:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "ssr:GND", "black", ["gnd", "power"]],
    ["esp32c3:3V3", "heating-element:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "heating-element:GND", "black", ["gnd", "power"]],
    ["esp32c3:3V3", "bt-sensor:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "bt-sensor:GND", "black", ["gnd", "power"]],
    ["esp32c3:3V3", "et-sensor:VCC", "red", ["vcc", "power"]],
    ["esp32c3:GND", "et-sensor:GND", "black", ["gnd", "power"]],
    ["esp32c3:GPIO5", "logic-analyzer:D2", "yellow"],
    ["esp32c3:GPIO6", "logic-analyzer:D3", "yellow"],
    ["esp32c3:GPIO7", "logic-analyzer:D4", "yellow"]
  ],
  "dependencies": {}
}